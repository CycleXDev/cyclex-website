      `,
      bm_help_title: "–ö–∞–∫ –¥–æ–±–∞–≤–∏—Ç—å",
      bm_help_1: "–°–æ–∑–¥–∞–π—Ç–µ –Ω–æ–≤—É—é –∑–∞–∫–ª–∞–¥–∫—É –≤ –±—Ä–∞—É–∑–µ—Ä–µ.",
      bm_help_2: "–í—Å—Ç–∞–≤—å—Ç–µ —Å–∫–æ–ø–∏—Ä–æ–≤–∞–Ω–Ω—ã–π —Å–∫—Ä–∏–ø—Ç –≤ –ø–æ–ª–µ URL/Address.",
      bm_help_3: "–°–æ—Ö—Ä–∞–Ω–∏—Ç–µ. –ù–∞–∂–∏–º–∞–π—Ç–µ –∑–∞–∫–ª–∞–¥–∫—É –¥–ª—è –∑–∞–ø—É—Å–∫–∞ —Å–∫–∞–Ω–µ—Ä–∞."
    }
  };

  // ---- helpers ----
  function cxGetLang() {
    const saved = (localStorage.getItem("cx_lang") || "").toLowerCase();
    if (CX_SUPPORTED_LANGS.includes(saved)) return saved;

    const nav = (navigator.language || "en").slice(0, 2).toLowerCase();
    if (CX_SUPPORTED_LANGS.includes(nav)) return nav;

    return "en";
  }

  function cxT(key, vars) {
    const lang = window.CX_LANG || "en";
    let str =
      (translations[lang] && translations[lang][key]) ||
      (translations.en && translations.en[key]) ||
      "";

    if (vars && typeof vars === "object") {
      for (const [k, v] of Object.entries(vars)) {
        str = str.split(`{${k}}`).join(String(v));
      }
    }
    return str;
  }

  function cxApplyTranslations() {
    const lang = window.CX_LANG || "en";

    document.body.classList.add("lang-switching");
    setTimeout(() => document.body.classList.remove("lang-switching"), 280);

    document.documentElement.setAttribute("lang", lang);
    document.documentElement.setAttribute("dir", CX_RTL_LANGS.has(lang) ? "rtl" : "ltr");

    // highlight active button
    document.querySelectorAll(".lang-btn").forEach((btn) => {
      const bLang = (btn.getAttribute("data-lang") || btn.dataset.lang || "").toLowerCase();
      btn.classList.toggle("active", bLang === lang);
    });

    // translate nodes
    document.querySelectorAll("[data-i18n]").forEach((el) => {
      const key = el.getAttribute("data-i18n");
      if (!key) return;

      const val =
        (translations[lang] && translations[lang][key]) ||
        (translations.en && translations.en[key]);

      if (val == null) return; // leave as-is if missing
      const htmlMode = el.getAttribute("data-i18n-mode") === "html" || key.endsWith("_html");
      if (htmlMode) el.innerHTML = val;
      else el.textContent = val;
    });
  }

  function cxSetLang(lang) {
    lang = (lang || "").toLowerCase();
    if (!CX_SUPPORTED_LANGS.includes(lang)) lang = "en";
    localStorage.setItem("cx_lang", lang);
    window.CX_LANG = lang;
    cxApplyTranslations();
  }

  // ---- expose ----
  window.CX_TRANSLATIONS = translations;
  window.CX_LANG = cxGetLang();
  window.cxT = cxT;
  window.cxSetLang = cxSetLang;
  window.cxApplyTranslations = cxApplyTranslations;

  // ---- bind lang buttons ----
  document.addEventListener("click", (e) => {
    const btn = e.target.closest(".lang-btn");
    if (!btn) return;
    const lang = (btn.getAttribute("data-lang") || btn.dataset.lang || "").toLowerCase();
    if (lang) cxSetLang(lang);
  });

  document.addEventListener("DOMContentLoaded", () => {
    cxApplyTranslations();
  });
})();
</script>
<script>
/* =========================
   Panel switch + status helpers (Part 3B)
   - Makes all panels behave the same
   - Gives you a clean "Copied" message with logo (bookmark)
   ========================= */
(() => {
  "use strict";

  function cxHideAllPanels() {
    document.querySelectorAll(".panel-shell").forEach((p) => p.classList.add("hidden"));
  }

  function cxDeactivateCards() {
    document.querySelectorAll(".tool-card").forEach((c) => c.classList.remove("active"));
  }

  // Unified open panel (prevents "weird gaps" caused by inconsistent scroll/offset)
  function cxOpenPanel(panelId, cardEl) {
    const panel = document.getElementById(panelId);
    if (!panel) return;

    cxHideAllPanels();
    panel.classList.remove("hidden");

    cxDeactivateCards();
    if (cardEl) cardEl.classList.add("active");

    // Ensure consistent spacing (same for ALL panels)
    panel.style.marginTop = "16px";

    // Smooth scroll with sticky top-bar offset
    panel.scrollIntoView({ behavior: "smooth", block: "start" });
    setTimeout(() => window.scrollBy(0, -90), 260);
  }

  // status helper (supports i18n keys)
  function cxSetStatus(elOrId, kind, msgKeyOrText, vars) {
    const el = typeof elOrId === "string" ? document.getElementById(elOrId) : elOrId;
    if (!el) return;

    el.classList.remove("ok", "warn", "bad", "info");
    if (kind) el.classList.add(kind);

    el.style.display = "block";

    let out = "";
    if (msgKeyOrText) {
      const maybe = window.cxT ? window.cxT(msgKeyOrText, vars) : "";
      out = maybe || String(msgKeyOrText);
    }

    const htmlMode = typeof msgKeyOrText === "string" && msgKeyOrText.endsWith("_html");
    if (htmlMode) el.innerHTML = out;
    else el.textContent = out;
  }

  // Bookmark helper: call this after you copy the bookmarklet
  // Example: cxShowBookmarkCopied("bm-out", "bm-help");
  function cxShowBookmarkCopied(statusId, helpId) {
    const status = document.getElementById(statusId);
    const help = document.getElementById(helpId);
    if (!status || !help) return;

    cxSetStatus(status, "info", "bm_copied_html");
    help.style.display = "block";

    if (window.cxApplyTranslations) window.cxApplyTranslations();
  }

  // Wire tool cards -> panels (expects data-panel="panel-quick" etc.)
  document.addEventListener("click", (e) => {
    const card = e.target.closest(".tool-card");
    if (!card) return;

    const panelId =
      card.getAttribute("data-panel") ||
      card.dataset.panel ||
      card.getAttribute("data-target") ||
      card.dataset.target ||
      "";

    if (panelId) cxOpenPanel(panelId, card);
  });

  // expose
  window.cxOpenPanel = cxOpenPanel;
  window.cxSetStatus = cxSetStatus;
  window.cxShowBookmarkCopied = cxShowBookmarkCopied;
})();
</script>

  <!-- PART 3 WILL START HERE: scripts -->
